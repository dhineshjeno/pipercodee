{
  "name": "pipercode-activity-tracker",
  "displayName": "PiperCode Activity Tracker",
  "description": "Track your coding activity and share with friends",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pipercode.showStats",
        "title": "Show Coding Stats",
        "category": "PiperCode"
      },
      {
        "command": "pipercode.toggleTracking",
        "title": "Toggle Activity Tracking",
        "category": "PiperCode"
      }
    ],
    "configuration": {
      "title": "PiperCode",
      "properties": {
        "pipercode.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Backend API URL"
        },
        "pipercode.userId": {
          "type": "string",
          "default": "",
          "description": "Your PiperCode User ID"
        },
        "pipercode.trackingEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable activity tracking"
        },
        "pipercode.heartbeatInterval": {
          "type": "number",
          "default": 120,
          "description": "Heartbeat interval in seconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}